Bootstrap: docker
From: conda/miniconda2-centos7

%environment
  LANG=en_US.UTF
  LC_ALL=en_US.UTF-8
  export LANG LC_ALL
  PATH=/usr/local/envs/curie-rawqc-1.0-dev/bin:$PATH
  export PATH

%labels
    DESCRIPTION Singularity image containing all requirements for rawqc pipeline
    VERSION 1.0

%files
    environment.yml /

%post
    conda env create -f /environment.yml
    conda clean -a
