/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run main.nf -profile test
 */

params {
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  singleEnd = true
  readPaths = [
    ['A000T01' ,  ['/data/tmp/testdataset_pipelines/RNA-seq/Gendrel2012/SRR1106775_1M_part1_1.fastq.gz']]
  ]
}

//smallRNA
nextflow run main.nf --singleEnd --reads '/data/kdi_prod/dataset_all/2008312/nobackup/A1111T01/A1111T01.R1.fastq.gz'
//pico-v2
nextflow run main.nf --reads '/data/kdi_prod/dataset_all/D183T14/D183T04.R{1,2}.fastq.gz' --pico
