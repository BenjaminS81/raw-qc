/*
 * -------------------------------------------------
 *  Nextflow config file for Genomes paths
 * -------------------------------------------------
 * Defines reference genomes
 * Can be used by any config that customises the base
 * path using $params.genomes_base / --genomeAnnotationPath
 */

params {
  genomes {

    fastqScreenGenomes {
      Human = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Human/Homo_sapiens.GRCh38"
      Mouse = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Mouse/Mus_musculus.GRCm38"
      Rat = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Rat/Rnor_6.0"
      Drosophila = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Drosophila/BDGP6"
      Worm = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Worm/Caenorhabditis_elegans.WBcel235"
      Yeast = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Yeast/Saccharomyces_cerevisiae.R64-1-1"
      Arabidopsis = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Arabidopsis/Arabidopsis_thaliana.TAIR10"
      Ecoli = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/E_coli/Ecoli"
      rRNA = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/rRNA/GRCm38_rRNA"
      MT = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Mitochondria/mitochondria"
      PhiX = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/PhiX/phi_plus_SNPs"
      Lambda = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Lambda/Lambda"
      Vectors = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Vectors/Vectors"
      Adapters = "${params.genomeAnnotationPath}/tools/FastqScreeeGenomes/Adapters/Contaminants"
    }
  }
}
